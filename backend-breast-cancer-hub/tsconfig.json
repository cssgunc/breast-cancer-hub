{
  "compilerOptions": {
    "target": "ES6",                           
    "module": "CommonJS",                      
    "strict": true,                            
    "esModuleInterop": true,        
    "resolveJsonModule": true,           
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist"                        
  },
  "include": ["app.ts", "routes/**/*.ts"],      
  "exclude": ["node_modules"]                   
}
